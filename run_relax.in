variable t0 equal 20.0
variable random atom "random(0, 1, 34312)*(q*0+1)"
variable retime   atom "-v_t0*ln(v_a_retime)"
variable relex    atom "v_retime <= step*dt"

variable i_num equal count(ions)

variable runs loop 100000
label looprun

if "${i_num} <= 0" then &
group temp3 variable relex
group relex intersect ions temp3
fix charge relex adapt 0 atom charge $(1.0)
run 1 

group temp3 delete
group relex delete

else "run upto 100000" &
"jump SELF break"

jump SELF looprun 
label break